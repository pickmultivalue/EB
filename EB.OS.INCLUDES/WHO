  FG$UDTNO=SYSTEM(18)
  FG$TLINE=SYSTEM(18)
! DUMMY=GETENV("JBCPORTNO",FG$TLINE)
  DUMMY=GETENV("PWD",FG$TACC.NAME)
  CONVERT '/\' TO CHAR(254):CHAR(254) IN FG$TACC.NAME
  FG$TACC.NAME=FG$TACC.NAME<DCOUNT(FG$TACC.NAME,CHAR(254))>
  FG$PRIVILEGE=3;!SYSTEM(21)
  rc = GETENV('USER',FG$LOGNAME)
  IF NOT(rc) THEN
    rc = GETENV('USERNAME',FG$LOGNAME)
    IF NOT(rc) THEN
      FG$LOGNAME=@LOGNAME ;!SYSTEM(50)
    END
  END
