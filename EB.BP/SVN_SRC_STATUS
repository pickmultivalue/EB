* @(#) SVN_SRC_STATUS Ported to jBASE 07:23:52  18 FEB 2010
    FUNCTION SVN_SRC_STATUS(FileName, ItemName)
    INCLUDE JBC.h
!
! Return the subversion status of given file/item
!
    DEFFUN SVN_EXEC()
    INCLUDE EB.INCLUDES SVN_DEBUG
    root = CONVERT(FileName, DIR_DELIM_CH, @AM)
    dc = DCOUNT(root, @AM)
    fName = root<dc>
    DEL root<dc>
    K.lockvar = fName:DIR_DELIM_CH:ItemName
    root = CONVERT(root, @AM, DIR_DELIM_CH)
    PCPERFORM 'cd ':root:' && git ls-files ':K.lockvar CAPTURING IO
    IF LEN(IO) THEN
        PCPERFORM 'cd ':root:' && git status ':K.lockvar CAPTURING IO
    END
    RETURN IO
    RETURN SVN_EXEC('status -v ':CONVERT(FileName,'\', '/'):'/':ItemName, 1)
